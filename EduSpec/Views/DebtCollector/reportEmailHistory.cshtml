{
    //
    PopupUtils.SetPopupViewProperties(settings, "pcPrintEmailHistoryReport", "Email history");
    settings.CallbackRouteValues = new { Controller = "DebtCollector", Action = "reportEmailHistory" };
    settings.ClientSideEvents.BeginCallback = "function(s, e) { ; }";
    settings.ClientSideEvents.EndCallback = "function(s, e) {  LoadingPanel.Hide(); s.Show(); }";
