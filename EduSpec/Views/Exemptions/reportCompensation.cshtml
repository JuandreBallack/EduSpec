@model DevExpress.XtraReports.UI.XtraReport

@Html.DevExpress().PopupControl(settings =>
{
    PopupUtils.SetPopupViewProperties(settings, "pcExemptionCompensation", "Application for Compensation");
    settings.CallbackRouteValues = new {Controller = "Exemptions", Action = "reportCompensation" };
    settings.ClientSideEvents.BeginCallback = "function(s, e) { e.customArgs['YearID'] = cbYear.GetValue(); }";
    settings.ClientSideEvents.EndCallback = "function(s, e) {  LoadingPanel.Hide(); s.Show(); }";
    settings.SetContent(() =>
    {
        Html.RenderPartial("DocumentViewer", Model, new ViewDataDictionary { { "Name", "Compensation" } });
    });
}).GetHtml()