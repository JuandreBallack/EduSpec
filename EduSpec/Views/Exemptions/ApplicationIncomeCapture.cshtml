        //    edtSettings.ControlStyle.CssClass = "formlabel";
        //    edtSettings.Width = 250;
        //    edtSettings.Text = "Effective Month:";
        //}).Render();

        //Html.DevExpress().ComboBox(comboBox =>
        //{
        //    comboBox.Name = "EffectiveFromMonth";
        //    comboBox.Width = 100;
        //    comboBox.ControlStyle.CssClass = "formeditor";
        //    comboBox.Properties.TextField = "Description";
        //    comboBox.Properties.ValueField = "ID";
        //    comboBox.Properties.ValueType = typeof(int);
        //}).BindList(GridUtils.getDropdownList("Get_Months_PickList")).Bind(DataBinder.Eval(Model, "EffectiveFromMonth")).Render();

        Html.DevExpress().Label(edtSettings =>
        {
            edtSettings.ControlStyle.CssClass = "formlabel";
            edtSettings.Width = 250;
            edtSettings.Text = "Application due to COVID19:";
        }).Render();

        Html.DevExpress().CheckBox(edtSettings =>
        {
            edtSettings.Name = "IsCovid19";
            edtSettings.ControlStyle.CssClass = "formeditor";
            edtSettings.Properties.ValueType = typeof(bool);
        }).Bind(DataBinder.Eval(Model, "IsCovid19")).Render();

        Html.DevExpress().Label(edtSettings =>
        {
            edtSettings.ControlStyle.CssClass = "formlabel";
            edtSettings.Width = 250;
            edtSettings.Text = "Payment from date:";
        }).Render();

        Html.DevExpress().DateEdit(deSettings =>
        {
            deSettings.Name = "PaymentFromDate";
            deSettings.ControlStyle.CssClass = "formeditor";
            deSettings.Width = 100;
            deSettings.ControlStyle.HorizontalAlign = System.Web.UI.WebControls.HorizontalAlign.Right;
            deSettings.Properties.NullText = "MM/dd/yyy";
            deSettings.Date = DateTime.Now;
        }).Bind(DataBinder.Eval(Model, "PaymentFromDate")).GetHtml();

        Html.DevExpress().Label(edtSettings =>
        {
            edtSettings.ControlStyle.CssClass = "formlabel";
            edtSettings.Width = 250;
            edtSettings.Text = "Payment to date:";
        }).Render();

        Html.DevExpress().DateEdit(seSettings =>
