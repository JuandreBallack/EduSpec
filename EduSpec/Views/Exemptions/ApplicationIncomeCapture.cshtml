<div id="RoundPanel">

    @Html.DevExpress().RoundPanel(rpSettings =>
{

    rpSettings.Name = "rpApplicationFinalise";
    rpSettings.HeaderText = "Processing Information";
    rpSettings.Width = Unit.Percentage(100);

    rpSettings.SetContent(() =>
    {
        ViewContext.Writer.Write("<div class=\"edit_form\" style=\"width: 100%; margin:0px 5px 0px 5px;\">");
        ViewContext.Writer.Write("<div class=\"line\" style=\"width: 100%; margin:0px 10px 10px 0px;\">");

        Html.DevExpress().Label(edtSettings =>
        {
            edtSettings.ControlStyle.CssClass = "formlabel";
            edtSettings.Width = 250;
            edtSettings.Text = "Joint application received:";
        }).Render();

        Html.DevExpress().CheckBox(edtSettings =>
        {
            edtSettings.Name = "IsJointApplicationReceived";
            edtSettings.ControlStyle.CssClass = "formeditor";
            edtSettings.Properties.ValueType = typeof(bool);
        }).Bind(DataBinder.Eval(Model, "IsJointApplicationReceived")).Render();

        Html.DevExpress().Label(edtSettings =>
        {
            edtSettings.ControlStyle.CssClass = "formlabel";
            edtSettings.Width = 250;
            edtSettings.Text = "Parent/Guardian Monthly income:";
        }).Render();

        Html.DevExpress().SpinEdit(seSettings =>
        {
            seSettings.Name = "IncomeParent1";
            seSettings.Properties.MaxValue = 1000000;
            seSettings.Number = 0;
            seSettings.Properties.MinValue = 0;
            seSettings.ControlStyle.CssClass = "formeditor";
            seSettings.Properties.SpinButtons.ShowIncrementButtons = false;
            seSettings.Width = 100;
            seSettings.Properties.DisplayFormatString = "c";
            seSettings.Properties.DecimalPlaces = 2;
            seSettings.ControlStyle.HorizontalAlign = System.Web.UI.WebControls.HorizontalAlign.Right;
        }).Bind(DataBinder.Eval(Model, "IncomeParent1")).GetHtml();

