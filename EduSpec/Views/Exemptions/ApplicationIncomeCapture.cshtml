        }).Bind(DataBinder.Eval(Model, "IncomeParent2")).GetHtml();

        Html.DevExpress().Label(edtSettings =>
        {
            edtSettings.ControlStyle.CssClass = "formlabel";
            edtSettings.Width = 250;
            edtSettings.Text = "Additional monetary contribution:";
        }).Render();

        Html.DevExpress().SpinEdit(seSettings =>
        {
            seSettings.Name = "Monetary";
            seSettings.Properties.MaxValue = 500000;
            seSettings.Number = 0;
            seSettings.Properties.MinValue = 0;
            seSettings.ControlStyle.CssClass = "formeditor";
            seSettings.Properties.SpinButtons.ShowIncrementButtons = false;
            seSettings.Width = 100;
            seSettings.Properties.DisplayFormatString = "c";
            seSettings.Properties.DecimalPlaces = 2;
            seSettings.ControlStyle.HorizontalAlign = System.Web.UI.WebControls.HorizontalAlign.Right;
        }).Bind(DataBinder.Eval(Model, "Monetary")).GetHtml();

        Html.DevExpress().Label(edtSettings =>
        {
            edtSettings.ControlStyle.CssClass = "formlabel";
            edtSettings.Width = 250;
            edtSettings.Text = "Learners In Other Schools:";
        }).Render();

        Html.DevExpress().SpinEdit(seSettings =>
        {
            seSettings.Name = "LearnersInOtherSchools";
            seSettings.Properties.MaxValue = 100000;
            seSettings.Number = 0;
            seSettings.Properties.MinValue = 0;
            seSettings.ControlStyle.CssClass = "formeditor";
            seSettings.Width = 100;
            seSettings.Properties.DecimalPlaces = 0;
            seSettings.ControlStyle.HorizontalAlign = System.Web.UI.WebControls.HorizontalAlign.Right;
        }).Bind(DataBinder.Eval(Model, "LearnersInOtherSchools")).GetHtml();

        Html.DevExpress().Label(edtSettings =>
        {
            edtSettings.ControlStyle.CssClass = "formlabel";
            edtSettings.Width = 250;
            edtSettings.Text = "Monthly Contibution Offer:";
        }).Render();

        Html.DevExpress().SpinEdit(seSettings =>
        {
            seSettings.Name = "Offer";
            seSettings.Properties.MaxValue = 100000;
            seSettings.Number = 0;
            seSettings.Properties.MinValue = 0;
            seSettings.ControlStyle.CssClass = "formeditor";
            seSettings.Properties.SpinButtons.ShowIncrementButtons = false;
            seSettings.Width = 100;
            seSettings.Properties.DisplayFormatString = "c";
            seSettings.Properties.DecimalPlaces = 2;
            seSettings.ControlStyle.HorizontalAlign = System.Web.UI.WebControls.HorizontalAlign.Right;
        }).Bind(DataBinder.Eval(Model, "Offer")).GetHtml();

        Html.DevExpress().Label(edtSettings =>
        {
            edtSettings.ControlStyle.CssClass = "formlabel";
            edtSettings.Width = 250;
            edtSettings.Text = "Total School Fees already Paid this year:";
        }).Render();

        Html.DevExpress().SpinEdit(seSettings =>
        {
            seSettings.Name = "AmountPaidToDate";
            seSettings.Properties.MaxValue = 100000;
            seSettings.Number = 0;
            seSettings.Properties.MinValue = 0;
            seSettings.ControlStyle.CssClass = "formeditor";
            seSettings.Properties.SpinButtons.ShowIncrementButtons = false;
            seSettings.Width = 100;
            seSettings.Properties.DisplayFormatString = "c";
            seSettings.Properties.DecimalPlaces = 2;
            seSettings.ControlStyle.HorizontalAlign = System.Web.UI.WebControls.HorizontalAlign.Right;
        }).Bind(DataBinder.Eval(Model, "AmountPaidToDate")).GetHtml();

        //Html.DevExpress().Label(edtSettings =>
