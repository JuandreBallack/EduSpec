@Html.DevExpress().HtmlEditor(edtSettings =>
{
    edtSettings.Toolbars.Add(toolbar =>
    {
        toolbar.Items.Add(new ToolbarUndoButton());
        toolbar.Items.Add(new ToolbarRedoButton());
    });

    edtSettings.Name = "Message_AFR";
    edtSettings.CallbackRouteValues = new { Controller = "BulkCorrespondence", Action = "MessageEditorFamilyCorrespondence_AFR", SMSID = ViewData["InstSMSID"] };
    edtSettings.Width = 300;
    edtSettings.Height = 200;
    edtSettings.Settings.AllowHtmlView = false;
    edtSettings.Settings.AllowPreview = false;
    edtSettings.ClientSideEvents.GotFocus = "onGotFocus_SMS";

}).Bind(Model).GetHtml()
