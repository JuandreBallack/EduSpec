@using (Html.BeginForm())
{

    Html.DevExpress().UploadControl(
    ucsettings =>
    {

        ucsettings.Name = "ucCorrespondenceEmailManualUploadData";
        ucsettings.CallbackRouteValues = new { Controller = "BulkCorrespondence", Action = "CallbacksCorrespondenceEmailManualFileUpload" };
        ucsettings.ClientSideEvents.FileUploadComplete = "function(s, e) { QueueEmailList(); }";
        ucsettings.ControlStyle.CssClass = "editorArea";
        ucsettings.Width = 200;
        ucsettings.ShowProgressPanel = true;
        ucsettings.BrowseButton.Text = ". . .";
//ucsettings.AdvancedModeSettings.EnableMultiSelect = true;
ucsettings.UploadMode = UploadControlUploadMode.Advanced;
    }).Render();


}
