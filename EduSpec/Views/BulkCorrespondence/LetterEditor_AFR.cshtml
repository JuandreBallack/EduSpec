@Html.DevExpress().HtmlEditor(edtSettings =>
{
    edtSettings.Name = "Body_AFR";
    edtSettings.CallbackRouteValues = new { Controller = "BulkCorrespondence", Action = "LetterEditor_AFR", LetterID = ViewData["InstLetterID"] };
    edtSettings.Width = Unit.Percentage(100);
    edtSettings.Height = 500;
    edtSettings.Settings.AllowHtmlView = false;
    edtSettings.Settings.AllowPreview = false;
    edtSettings.ClientSideEvents.GotFocus = "onGotFocus_Letter";
}).Bind(Model).GetHtml()

