@{ Layout = "~/Views/Shared/_lightLayout.cshtml"; }

@{
    
    @Html.AntiForgeryToken()

    <table style="width:100%">
        <tr>
            <td width="25%"></td>
            <td style="text-align:center" width="50%">

                <h1>@ViewBag.Title</h1><br />
                <p>@ViewBag.Message</p><br />

                @Html.DevExpress().Button(btnsettings =>
                {
                    btnsettings.Name = "btnOk";
                    btnsettings.Text = "Ok";
                    btnsettings.RouteValues = new { Controller = "Account", Action = "LogOff" };
                    btnsettings.CausesValidation = false;
                }).GetHtml()

            </td>
            <td width="25%"></td>
        </tr>
    </table>
}

