@using (Html.BeginForm())
{
    Html.DevExpress().UploadControl(
    ucsettings =>
    {        
        ucsettings.Name = "ucSingleEmailUploadData";
        ucsettings.CallbackRouteValues = new { Controller = "Shared", Action = "CallbacksSingleEmailFileUpload" };
        ucsettings.ClientSideEvents.FileUploadComplete = "function(s, e) { SendSingleEmail(e); }";
        ucsettings.ControlStyle.CssClass = "editorArea";
        ucsettings.Width = 420;
        ucsettings.ShowProgressPanel = true;
        ucsettings.BrowseButton.Text = ". . .";
        ucsettings.UploadMode = UploadControlUploadMode.Advanced;
    }).Render();
}
